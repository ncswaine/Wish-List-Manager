@model WishListManager.Models.wishlist_item

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (ViewBag.addSuccess == true)
    {
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Success!</strong> The wish list item was added successfully.
    </div>
    }

@if (ViewBag.editSuccess == true)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Success!</strong> Changes were saved successfully.
    </div>
}
<h2>Item Details</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.person.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.person.name)
        </dd>

         <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.is_purchased)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.is_purchased)
        </dd>

    </dl>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="/WishlistItem/" class="isbutton">
            <input type="button" value="Back to List" class="btn btn-default" />
        </a>
        <a href="/WishlistItem/Edit/@Model.id" class="isbutton">
            <input type="button" value="Edit" class="btn btn-default" />
        </a>
    </div>
</div>
